#!/bin/bash

function log { echo flower: "$@" >&2; }

case "$1" in
  -*) ;; *) command="$1"; shift ;;
esac

[[ $command == server ]] && {
  [[ -n $PORT ]] || [[ -e .port ]] || {
    port=$(flower random-port)
    log "Initializing ‘.port’ file to $port."
    log "Use ‘flower pow’ to hook into Pow (requires Pow 0.4)."
    echo $port > .port
  }
}

if [[ -z $command ]]; then
  echo "Use ‘flower server’ to run the web server."
else
  flower-$command "$@"
fi
