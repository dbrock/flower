#!/bin/bash

case "$1" in
  -*) ;; *) command="$1"; shift ;;
esac

if [[ $command ]]; then
  "flower-$command" "$@"
else
  echo \
————————————————————————————————————————————————————————————————————————————————
  echo "\
         Exposing current directory as a basic Flower app..."
  echo \
————————————————————————————————————————————————————————————————————————————————
  [[ $PORT ]] || [[ -f .port ]] || flower pick-port
  flower ps1 node -e 'require("flower").listen()'
fi
